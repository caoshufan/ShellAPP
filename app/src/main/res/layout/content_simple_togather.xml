<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.devin.client.shellapp.ui.activity.SimpleTogatherActivity"
    tools:showIn="@layout/activity_simple_togather">

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/text_margin"
        android:id="@+id/card_view"
        android:elevation="3dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="2dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:padding="6dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:text="摩羯座法式烘焙(正佳广场店)"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:text="地址："
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:id="@+id/address"
                android:text="     天河区天河路228号正佳广场2楼2A026A、2A026B号铺"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="16sp"
                android:text="电话：020-38373573"
                android:id="@+id/tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.v4.widget.NestedScrollView>
