<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:elevation="3dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardCornerRadius="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/clike"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img"
                android:src="@mipmap/togather_2"
                android:layout_width="120dp"
                android:layout_height="140dp" />
            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_toEndOf="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    android:padding="3dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="摩羯座法式烘焙(正佳广场店)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/interesting"
                    android:padding="5dp"
                    android:textSize="8sp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="10感兴趣"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingTop="2dp"
                        android:src="@mipmap/tab_money_unselect"
                        android:layout_width="20dp"
                        android:layout_height="22dp" />
                    <TextView
                        android:padding="5dp"
                        android:textSize="12sp"
                        android:text="消费"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp" />
                    <TextView
                        android:id="@+id/account"
                        android:textSize="12sp"
                        android:paddingStart="8dp"
                        android:textColor="@android:color/holo_red_dark"
                        android:text="30/人"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingTop="2dp"
                        android:src="@mipmap/navigation_black"
                        android:layout_width="20dp"
                        android:layout_height="22dp" />
                    <TextView
                        android:padding="5dp"
                        android:textSize="12sp"
                        android:text="地址"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp" />
                    <TextView
                        android:id="@+id/local"
                        android:textSize="12sp"
                        android:paddingStart="8dp"
                        android:textColor="@android:color/holo_red_dark"
                        android:text="天河区天河路228号正佳广场2楼2A026A、2A026B号铺"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:src="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="0.1dp" />

        <include layout="@layout/card_view_tab_button"/>

    </LinearLayout>

</android.support.v7.widget.CardView>