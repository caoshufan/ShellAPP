<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_100">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/convenientBanner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:canLoop="true"/>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/resource"
                android:src="@mipmap/source"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:text="原材料"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/child"
                android:src="@mipmap/child"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:text="儿童"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/tool"
                android:src="@mipmap/tool"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:textAlignment="center"
                android:text="用具"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/cake"
                android:src="@mipmap/cake"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:textAlignment="center"
                android:text="蛋糕"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <RelativeLayout
            android:background="@mipmap/cheer_3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="centerInside"
                android:src="@mipmap/hot"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:textColor="@android:color/white"
                android:id="@+id/name"
                android:layout_marginTop="90dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="16sp"
                android:text="[精致马芬蛋糕纸杯]"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@android:color/white"
                android:layout_below="@+id/name"
                android:textSize="16sp"
                android:text="7折起"
                android:textAlignment="center"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@mipmap/shopping_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/tui"
                    android:layout_width="130dp"
                    android:layout_height="100dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@mipmap/shopping_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/good"
                    android:scaleType="centerInside"
                    android:src="@mipmap/good"
                    android:layout_width="80dp"
                    android:layout_height="50dp" />
                <TextView
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/good"
                    android:textColor="@android:color/white"
                    android:text="有货"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@android:color/darker_gray"
            android:layout_width="5dp"
            android:layout_height="18dp" />
        <TextView
            android:textSize="14sp"
            android:text="今日特惠"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>

</LinearLayout>